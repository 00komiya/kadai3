<div class="container px-5 px-sm-0">
 <div class="row"> 
  <div class="col-md-3" >
    <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
     <tr>
        <th><h5>name</h5></th>
        <th><%= @user.name %></th>
        <th colspan="3"></th>
      </tr>
   <h5>introduction</h5>
    <%= link_to"",edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
    
       <h2>New book</h2>
       <%= form_with model: @book do |f| %>
         <h5>Title</h5>
          <%= f.text_field :title %>
           <h5>Opinion</h5>
             <%= f.text_area :body %>
	               <br><%= f.submit 'Create Book' %></br>
       <% end %>
    </div>

      <div class="col-md-8 offset-md-1">
       <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
    <td>
      <%= link_to user_path(@book.user_id) do %>
           <%= @book.user.name %>
       <% end %>
    </td>
    <td><%= link_to @book.title %></td>
    <td><%= @book.body %></td>
    <% if @book.user_id == current_user.id %>
    <td><%= link_to"edit", edit_book_path(@book.id),class:"btn-sm btn-success" %></td>
    <td><%= link_to "destroy", book_path(@book.id), class:"btn-sm btn-danger destroy(@book.id)", method: :delete,data: {confirm: "削除しますか？"} %></td>
    <% end %>

    </table>
  </div>
</div>

    